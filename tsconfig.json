{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "..",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "../london-kids-p1/packages/shared/src/activity.ts",
    "../london-kids-p1/packages/shared/src/areas.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
